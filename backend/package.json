{
  "name": "participium-backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run format && ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "prestart": "npm run prisma",
    "start:init": "node scripts/init-db.js",
    "start:server": "node src/index.js",
    "start": "npm run start:init && npm run start:server",
    "format": "prettier --write **/*.ts",
    "prisma": "prisma generate && prisma migrate deploy",
    "init-db": "npm run prisma && ts-node-dev -r tsconfig-paths/register scripts/init-db.ts",
    "test-unit": "jest --runInBand --selectProjects unit",
    "test-integration": "dotenv -e .env.test -- jest --runInBand --selectProjects integration",
    "test": "dotenv -e .env.test -- jest --runInBand",
    "test-coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/ioredis": "^4.28.10",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-openapi-validator": "^5.6.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "@types/yamljs": "^0.2.34",
    "dotenv-cli": "^11.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
