generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  firstName String
  lastName  String
  password  String
  createdAt DateTime @default(now())
  role      roleType     @default(CUSTOMER)
  municipality_role_id Int?
  municipality_role   municipality_role?   @relation(fields: [municipality_role_id], references: [id], onDelete: Restrict)
}

model report {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  latitude  Float
  longitude Float
}

model municipality_role {
  id        Int      @id @default(autoincrement())
  name      String    @unique
  users     user[]
}

enum roleType {
  CUSTOMER
  ADMIN
  MUNICIPALITY
}