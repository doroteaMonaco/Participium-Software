generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                   Int                @id @default(autoincrement())
  username             String             @unique
  email                String             @unique
  firstName            String
  lastName             String
  password             String
  createdAt            DateTime           @default(now())
  profilePhoto         String?
  telegramUsername     String?
  notifications        Boolean            @default(true)
  reports              report[]           @relation("CitizenReports")
  messages         message[]          @relation("userMessages")
}

model municipality_user {
  id              Int      @id @default(autoincrement())
  username             String             @unique
  email                String             @unique
  firstName            String
  lastName             String
  password             String
  createdAt            DateTime           @default(now())
  municipality_role_id Int?
  municipality_role    municipality_role? @relation(fields: [municipality_role_id], references: [id], onDelete: Restrict)
  assignedReports      report[]           @relation("OfficerAssignments")
  messages     message[]          @relation("municipalityMessages")
}

model admin_user {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  firstName String
  lastName  String
  password  String
  createdAt DateTime @default(now())
}

model external_maintainer {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  firstName String
  lastName String
  password  String
  companyName String
  createdAt DateTime @default(now())
  category  Category
  reports   report[]
}

model report {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  latitude    Float
  longitude   Float
  title       String
  category    Category
  description String
  photos      String[]
  status      reportStatus @default(PENDING_APPROVAL)
  rejectionReason String?
  assignedOffice String?
  anonymous   Boolean  @default(false)
  user_id     Int?
  user        user? @relation("CitizenReports", fields: [user_id], references: [id], onDelete: Restrict)
  assignedOfficerId Int?
  assignedOfficer municipality_user? @relation("OfficerAssignments", fields: [assignedOfficerId], references: [id], onDelete: SetNull)
  externalMaintainerId Int?
  externalMaintainer external_maintainer? @relation(fields: [externalMaintainerId], references: [id], onDelete: SetNull)
  

  @@index([assignedOfficerId])
}

model message {
  id            Int      @id @default(autoincrement())
  title         String
  content       String
  sentAt        DateTime @default(now())
  readAt        DateTime?
  user_id     Int
  municipality_user_id  Int
  user        user     @relation("userMessages", fields: [user_id], references: [id], onDelete: Restrict)
  municipality_user     municipality_user     @relation("municipalityMessages", fields: [municipality_user_id], references: [id], onDelete: Restrict)
  sent_by_municipality Boolean @default(true)
}

model municipality_role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users municipality_user[]
}

enum Category {
  WATER_SUPPLY_DRINKING_WATER
  ARCHITECTURAL_BARRIERS
  SEWER_SYSTEM
  PUBLIC_LIGHTING
  WASTE
  ROAD_SIGNS_TRAFFIC_LIGHTS
  ROADS_URBAN_FURNISHINGS
  PUBLIC_GREEN_AREAS_PLAYGROUNDS
  OTHER
}

enum reportStatus {
  PENDING_APPROVAL
  ASSIGNED
  IN_PROGRESS
  SUSPENDED
  REJECTED
  RESOLVED
}