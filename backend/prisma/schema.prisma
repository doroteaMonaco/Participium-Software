generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  firstName String
  lastName  String
  password  String
  createdAt DateTime @default(now())
  role      roleType     @default(CITIZEN)
  municipality_role_id Int?
  municipality_role   municipality_role?   @relation(fields: [municipality_role_id], references: [id], onDelete: Restrict)
}

model report {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  latitude    Float
  longitude   Float
  title       String
  description String
  category    Category
  photos      String[]
}

model municipality_role {
  id        Int      @id @default(autoincrement())
  name      String    @unique
  users     user[]
}

enum roleType {
  CITIZEN
  ADMIN
  MUNICIPALITY
}

enum Category {
  WATER_SUPPLY_DRINKING_WATER
  ARCHITECTURAL_BARRIERS
  SEWER_SYSTEM
  PUBLIC_LIGHTING
  WASTE
  ROAD_SIGNS_TRAFFIC_LIGHTS
  ROADS_URBAN_FURNISHINGS
  PUBLIC_GREEN_AREAS_PLAYGROUNDS
  OTHER
}