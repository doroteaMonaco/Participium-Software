generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                   Int                @id @default(autoincrement())
  username             String             @unique
  email                String             @unique
  firstName            String
  lastName             String
  password             String
  createdAt            DateTime           @default(now())
  profilePhoto         String?
  telegramUsername     String?
  notifications        Boolean            @default(true)
  reports              report[]           @relation("CitizenReports")
  messages         message[]          @relation("userMessages")
}

model pending_verification_user {
  id                     Int       @id @default(autoincrement())
  username               String    @unique
  email                  String    @unique
  firstName              String
  lastName               String
  password               String
  verificationCodeHash   String
  verificationCodeExpiry DateTime
  verificationAttempts   Int       @default(0)
  createdAt              DateTime  @default(now())
}

model municipality_user {
  id              Int      @id @default(autoincrement())
  username             String             @unique
  email                String             @unique
  firstName            String
  lastName             String
  password             String
  createdAt            DateTime           @default(now())
  municipality_role_id Int?
  municipality_role    municipality_role? @relation(fields: [municipality_role_id], references: [id], onDelete: Restrict)
  assignedReports      report[]           @relation("OfficerAssignments")
  messages     message[]          @relation("municipalityMessages")
  comments     comment[]
}

model admin_user {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  firstName String
  lastName  String
  password  String
  createdAt DateTime @default(now())
}

model external_maintainer {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  firstName String
  lastName String
  password  String
  companyName String
  createdAt DateTime @default(now())
  category  Category
  reports   report[]
  comments  comment[]
}

model report {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  latitude    Float
  longitude   Float
  title       String
  category    Category
  description String
  photos      String[]
  status      reportStatus @default(PENDING_APPROVAL)
  rejectionReason String?
  assignedOffice String?
  anonymous   Boolean  @default(false)
  user_id     Int?
  user        user? @relation("CitizenReports", fields: [user_id], references: [id], onDelete: Restrict)
  assignedOfficerId Int?
  assignedOfficer municipality_user? @relation("OfficerAssignments", fields: [assignedOfficerId], references: [id], onDelete: SetNull)
  externalMaintainerId Int?
  externalMaintainer external_maintainer? @relation(fields: [externalMaintainerId], references: [id], onDelete: SetNull)
  comments   comment[]

  @@index([assignedOfficerId])
}

model message {
  id            Int      @id @default(autoincrement())
  title         String
  content       String
  sentAt        DateTime @default(now())
  readAt        DateTime?
  user_id     Int
  municipality_user_id  Int
  user        user     @relation("userMessages", fields: [user_id], references: [id], onDelete: Restrict)
  municipality_user     municipality_user     @relation("municipalityMessages", fields: [municipality_user_id], references: [id], onDelete: Restrict)
  sent_by_municipality Boolean @default(true)
}

model municipality_role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users municipality_user[]
}

model comment {
  id                     Int       @id @default(autoincrement())
  reportId              Int
  municipality_user_id   Int?
  external_maintainer_id Int?
  content                String
  createdAt              DateTime  @default(now())
  updatedAt              DateTime?  @updatedAt
  read                   Boolean   @default(false)

  report               report              @relation(fields: [reportId], references: [id], onDelete: Cascade)
  municipality_user    municipality_user?  @relation(fields: [municipality_user_id], references: [id], onDelete: SetNull)
  external_maintainer  external_maintainer? @relation(fields: [external_maintainer_id], references: [id], onDelete: SetNull)

  @@index([reportId])
  @@index([municipality_user_id])
  @@index([external_maintainer_id])
}


enum Category {
  WATER_SUPPLY_DRINKING_WATER
  ARCHITECTURAL_BARRIERS
  SEWER_SYSTEM
  PUBLIC_LIGHTING
  WASTE
  ROAD_SIGNS_TRAFFIC_LIGHTS
  ROADS_URBAN_FURNISHINGS
  PUBLIC_GREEN_AREAS_PLAYGROUNDS
  OTHER
}

enum reportStatus {
  PENDING_APPROVAL
  ASSIGNED
  IN_PROGRESS
  SUSPENDED
  REJECTED
  RESOLVED
}